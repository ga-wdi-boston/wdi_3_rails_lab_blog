<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter, class: 'form-control'  %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control'  %>
  </p>
  <p>
    <%= f.submit :submit, class: 'btn' %>
  </p>
<% end %>
