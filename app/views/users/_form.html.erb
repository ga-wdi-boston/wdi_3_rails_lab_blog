
<div class="form">

	<h2>Register</h2>
	<hr>

	<%= form_for @user do |f| %>
		<div class="entry">
			<%= f.label :first_name, 'First Name: ' %>
			<%= f.text_field :first_name, size: '40' %>
		</div>
	
		<div class="entry">
			<%= f.label :last_name, 'Last Name: ' %>
			<%= f.text_field :last_name, size: '40' %>
		</div>
	
		<div class="entry">
			<%= f.label :email, 'E-mail: ' %>
			<%= f.text_field :email, size: '40' %>
		</div>
	
		<div class="entry">
			<%= f.label :password, 'Pasword: ' %>
			<%= f.password_field :password, size: '40' %>
		</div>

		<div class="entry">
			<%= f.label :password_confirmation, 'Confirm Pasword: ' %>
			<%= f.password_field :password_confirmation, size: '40' %>
		</div>
	
		<%= f.submit 'Register', class: 'button' %>
	
	<% end %>
</div>