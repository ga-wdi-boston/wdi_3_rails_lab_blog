<div class='form'>
	<h2>Login</h2>
	<%= form_for(:user, url: {controller: 'users', action: 'login'}) do |f| %>

		<div class="entry">
			<%= f.label :email, 'E-mail: ' %>
			<%= f.text_field :email, size: '40' %>
		</div>
	
		<div class="entry">
			<%= f.label :password, 'Pasword: ' %>
			<%= f.text_field :password, size: '40' %>
		</div>
	
		<%= f.submit 'Login', class: 'button' %>
	
	<% end %>

</div>