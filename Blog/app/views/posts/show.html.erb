<h2><%= @post.subject %></h2>
<h3>Author: <%= @post.author %></h3>
<h4>Created: <%= @post.created_at.strftime("%Y-%m-%d") %></h4>
<h4>Category: <%= @post.category.present? ? @post.category : 'General' %></h4>
<h4>Content</h4>
<div>
  <%= @post.content %>
</div>
</br>
<div>
  <ol>
    <% @comments.each do |comment| %>
      <li><%= comment.content %>  <%= comment.author %> <%= comment.created_at.strftime("%Y-%m-%d") %></li>
    <% end %>
  </ol>
</div>

</div>
  <p>
    <%= render 'comments/form' %>
  </p>
</div>
<div>
  <p>
    <%= link_to "Back to post listing", posts_path %>
    | <%= link_to "Edit", edit_post_path(@post) %>
    | <%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
</div>
